<h1>Listing choices</h1>

<table>
  <tr>
    <th>User</th>
    <th>Question</th>
    <th>Answer</th>
  </tr>

<% @choices.each do |choice| %>
  <tr>
    <td><%=h choice.user %></td>
    <td><%=h choice.question %></td>
    <td><%=h choice.answer %></td>
    <td><%= link_to 'Show', choice %></td>
    <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
    <td><%= link_to 'Destroy', choice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New choice', new_choice_path %>